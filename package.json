{
	"name": "acai",
	"description": "The monorepo responsible for handling all of açaí's modules into a centralized space",
	"author": "APO Softworks",
	"license": "BSD-3-Clause",
	"repository": {
		"type": "git",
		"url": "https://github.com/AcaiJS/modules"
	},
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"eslint": "^7.31.0",
		"husky": "^7.0.0",
		"lerna": "^4.0.0",
		"lint-staged": "^11.0.1",
		"syncpack": "^5.7.11"
	},
	"scripts": {
		"sync": "yarn run syncpack fix-mismatches",
		"all:publish": "yarn lerna publish from-git --yes",
		"all:test": "yarn lerna run test --stream",
		"all:version": "yarn lerna version",
		"all:build": "yarn lerna run build",
		"delete:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
		"format": "eslint --fix --ext .js,jsx,.ts,.tsx .",
		"lerna": "./node_modules/.bin/lerna",
		"lint": "yarn eslint -c ./packages/u_preset/.eslintrc.js",
		"pre-commit": "lint-staged",
		"prepare": "husky install",
		"m:config": "yarn workspace @acai/config",
		"m:interfaces": "yarn workspace @acai/interfaces",
		"m:model": "yarn workspace @acai/model",
		"m:query": "yarn workspace @acai/query",
		"m:router": "yarn workspace @acai/router",
		"m:server": "yarn workspace @acai/server",
		"m:stubber": "yarn workspace @acai/stubber",
		"m:testing": "yarn workspace @acai/testing",
		"m:validator": "yarn workspace @acai/validator",
		"m:runtime": "yarn workspace @acai/runtime",
		"m:preset": "yarn workspace @acai/preset",
		"m:utils": "yarn workspace @acai/utils"
	}
}