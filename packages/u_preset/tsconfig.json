{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"strict": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"outDir": "../../dist",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "../../dist/types",
		"removeComments": false,
		"moduleResolution": "node",
		"strictNullChecks": true,
		"strictPropertyInitialization": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**",
		"**/*.{test,tests}.*",
		"dist/**/*",
		"LICENSE",
		"**/*.md"
	]
}