{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "declaration": true,
    "moduleResolution": "node",
    "noLib": false,
    "emitDecoratorMetadata": true,

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "declarationDir": "dist/types"
  },
  "exclude": ["dist", "node_modules", "**/*.test.*"],
}
